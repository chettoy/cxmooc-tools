{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@App/*": ["src/*"],
      "@Test/*": ["tests/*"]
    }
  },
  "include": ["./src/*.ts", "./src/**/*.ts", "./tests/*.test.ts"]
}
